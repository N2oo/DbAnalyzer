{% extends 'base.html.twig' %}

{% block title %}Table : {{ table }}{% endblock %}

{% block body %}
    <h1>Table</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ table.id }}</td>
        </tr>
        <tr>
            <th>Database</th>
            <td>{{ table.forDb.name }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ table.name }}</td>
        </tr>
        <tr>
            <th>Unique Name</th>
            <td>{{ table }}</td>
        </tr>
        <tr>
            <th>IsView</th>
            <td>{{ table.isView ? 'Yes':'No' }}</td>
        </tr>
        {% if table.isView %}
            <tr>
                <th>View Query</th>
                <td>
                    <code>
                        {{ table.query }}
                    </code>
                </td>
            </tr>
        {% endif %}
        <tr>
            <th>Fields</th>
            <td>
                <ul>
                    <table>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID dans {{ table.forDb }}</th>
                                <th>Nom unique du champ</th>
                                <th>Nom du champ</th>
                                <th>Type du champ</th>
                                <th>Taille du champ</th>
                                <th>Primaire ?</th>
                                <th>Nombre d'usages</th>
                                <th>Utilis√© dans autre table</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for field in table.fields %}
                                    <tr>
                                        <td>{{ field.id }}</td>
                                        <td>{{ field.fieldoriginalid }}</td>
                                        <td><a href="{{ path('app_field_show',{"id":field.id}) }}">{{ field }}</a></td>
                                        <td><a href="{{ path('app_field_show',{"id":field.id}) }}">{{ field.name }}</a></td>
                                        <td>{{ field.type }}</td>
                                        <td>{{ field.length }}</td>
                                        <td>{{ field.isPrimary ? 'Oui':'Non' }}</td>
                                        {% if field.usages.count>0 %}
                                            <td>{{ field.usages.count }}</td>
                                            {% else %}
                                            <td>0</td>
                                        {% endif %}
                                        {% if field.useProperty is not null %}
                                            <td><a href="{{ path('app_field_show',{'id':field.useProperty.id}) }}">{{ field.useProperty }}</a></td>
                                            {% else %}
                                            <td>Non</td>
                                        {% endif %}
                                    </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Preview de la base</th>
            <td>
                <ul>
                    <table>
                        <thead>
                            <tr>
                                {% for field in table.fields %}
                                    <th>{{ field.name }}</th>
                                {% endfor %}
                            </tr>
                        </thead>
                    </table>
                </ul>
            </td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('app_database_show',{'id':table.forDb.id}) }}">back to database</a>

    <a href="{{ path('app_table_edit', {'id': table.id}) }}">edit</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
