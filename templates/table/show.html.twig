{% extends 'base.html.twig' %}

{% block title %}Table : {{ table }}{% endblock %}

{% block body %}
    <h1>Table</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ table.id }}</td>
            </tr>
            <tr>
                <th>Database</th>
                <td>{{ table.forDb.name }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ table.name }}</td>
            </tr>
            <tr>
                <th>Unique Name</th>
                <td>{{ table }}</td>
            </tr>
            <tr>
                <th>IsView</th>
                <td>{{ table.isView ? 'Yes':'No' }}</td>
            </tr>
            <tr>
                <th>Fields</th>
                <td>
                    <ul>
                        {% for field in table.fields %}
                            <li>
                                <a href="{{ path('app_field_show',{'id':field.id}) }}">{{ field.name }}</a>
                                {% if field.usages.count > 0%}
                                    <ul>
                                        <li>UtilisÃ© dans {{ field.usages.count }} autre table{{ field.usages.count>1 ? 's':'' }}</li>
                                    </ul>
                                {% endif %}
                                {% if field.useProperty is not null %}
                                <ul>
                                    <li>
                                        ForeignKey of <a href="{{ path('app_field_show',{'id':field.useProperty.id}) }}">{{ field.useProperty }}</a>
                                    </li>
                                </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_database_show',{'id':table.forDb.id}) }}">back to database</a>

    <a href="{{ path('app_table_edit', {'id': table.id}) }}">edit</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
