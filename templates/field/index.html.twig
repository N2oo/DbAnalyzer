{% extends 'base.html.twig' %}

{% block title %}Field index{% endblock %}

{% block body %}
    <h1>Field index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Table</th>
                <th>Name</th>
                <th>Length</th>
                <th>IsPrimary</th>
                <th>Commentary</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for field in fields %}
            <tr>
                <td>{{ field.id }}</td>
                <td>{{ field.forTable.name }}</td>
                <td>{{ field.name }}</td>
                <td>{{ field.length }}</td>
                <td>{{ field.isPrimary ? 'primary':'default' }}</td>
                <td>{{ field.commentary }}</td>
                <td>
                    <a href="{{ path('app_field_show', {'id': field.id}) }}">show</a>
                    <a href="{{ path('app_field_edit', {'id': field.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_field_new') }}">Create new</a>
{% endblock %}
