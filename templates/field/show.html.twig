{% extends 'base.html.twig' %}

{% block title %}Field{% endblock %}

{% block body %}
    <h1>Field</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ field.id }}</td>
            </tr>
            <tr>
                <th>Database</th>
                <td>{{ field.forTable.forDb.name }}</td>
            </tr>
            <tr>
                <th>Table</th>
                <td>{{ field.forTable.name }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ field.name }}</td>
            </tr>
            <tr>
                <th>Unique name</th>
                <td>{{ field }}</td>
            </tr>
            <tr>
                <th>Is Primary</th>
                <td>{{ field.isPrimary ? 'Yes' : 'No' }}</td>
            </tr>
            {% if field.usages.count > 0%}
                <tr>
                    <th>Utilisée dans les champs</th>
                    <td>
                        <ul>
                            {% for usage in field.usages %}
                                <li><a href="{{ path('app_field_show',{'id':usage.id}) }}">{{ usage }}</a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endif %}
            {% if field.useProperty is not null %}
                <tr>
                    <th>Est une clée qui pointe vers :</th>
                    <td><a href="{{ path('app_field_show',{'id':field.useProperty.id}) }}">{{ field.useProperty }}</a></td>
                </tr>
            {% endif %}
            <tr>
                <th>Type</th>
                <td>{{ field.type }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ field.length }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_table_show',{'id':field.forTable.id}) }}">back to table</a>

    <a href="{{ path('app_field_edit', {'id': field.id}) }}">edit</a>

    {{ include('field/_delete_form.html.twig') }}
{% endblock %}
