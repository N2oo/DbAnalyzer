{% extends 'base.html.twig' %}

{% block title %}DB : {{ database.name }}{% endblock %}

{% block body %}
    <h1>Database</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ database.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ database.name }}</td>
            </tr>
            <tr>
                <th>Tables</th>
                <td>
                    <table>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Nb Col</th>
                                <th>Is View ?</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for table in database.tables %}
                                <tr>
                                    <td>{{ table.id }}</td>
                                    <td><a href="{{ path('app_table_show',{'id':table.id}) }}">{{ table }}</a></td>
                                    <td>{{ table.fields.count }}</td>
                                    <td>{{ table.isView ? 'Yes' : 'No' }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_database_index') }}">back to list</a>

    <a href="{{ path('app_database_edit', {'id': database.id}) }}">edit</a>

    {{ include('database/_delete_form.html.twig') }}
{% endblock %}
